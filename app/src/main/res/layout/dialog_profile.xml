<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_profile_current"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Current name:"
            android:textAlignment="viewStart"
            android:textAppearance="@android:style/TextAppearance.Material.DialogWindowTitle" />

        <TextView
            android:id="@+id/dialog_profile_current_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="No name"
            android:textAlignment="viewStart"
            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_profile_header"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="New name:"
            android:textAlignment="viewStart"
            android:textAppearance="@android:style/TextAppearance.Material.DialogWindowTitle" />

        <EditText
            android:id="@+id/dialog_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a new name"
            android:inputType="textShortMessage"
            android:textColorHint="#A5A5A5"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
