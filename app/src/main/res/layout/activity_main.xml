<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cmsc436.proximity.MainActivity">

    <include
        layout= "@layout/action_bar"
        android:id="@+id/action_bar">
    </include>

    <Button
        android:id="@+id/startgamebtn"
        android:text="Start Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/subscribe_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textColor="#1C7C72"
        android:text="@string/discover_nearby_devices"
        android:checked="true"
        android:textSize="19sp"
        android:textStyle="bold|italic"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/publish_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="@string/share_message"
        android:checked="true"
        android:textColor="#1C7C72"
        android:textSize="19sp"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/fakemsgbtn"
        android:text="Receive Fake Message for testing purposes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/nearby_devices_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:transcriptMode="alwaysScroll" />

    <TextView
        android:id="@+id/emptyT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="No messages have been received"/>

</LinearLayout>
